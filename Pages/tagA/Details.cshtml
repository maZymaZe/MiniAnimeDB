@page
@model MiniAnimeDB.Pages.tagA.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AnimeTag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TagA.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TagA.Tag)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Example Animes</th>
                </tr>
                @foreach (var item in Model.TagA.WithTags)
                {
                    <tr>
                        <td>

                            @{
                                var LinkToAnime = "/anime/Details?id=" + item.AnimeID.ToString();
                            }

                            <a class="col-sm-10" href=@LinkToAnime>
                                @Html.DisplayFor(modelItem => item.Anime.Title)
                            </a>
                        </td>
                    </tr>

                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.TagA.TagAID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
